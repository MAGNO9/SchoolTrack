# ==================== SERVIDOR ====================
PORT=10000
NODE_ENV=production

# ==================== BASE DE DATOS ====================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/schooltrack?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/schooltrack?retryWrites=true&w=majority

# ==================== AUTENTICACIÓN ====================
JWT_SECRET=tu_secreto_jwt_muy_seguro_cambiar_en_produccion_min_32_caracteres
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=tu_refresh_token_secret_muy_seguro_min_32_caracteres
SECRET_SESSION=tu_secreto_de_sesion_muy_seguro_min_32_caracteres
SECURE_COOKIES=true

# ==================== SERVICIOS EXTERNOS (MAPAS Y GEOCODIFICACIÓN) ====================
MAPTILER_API_KEY=tu_api_key_de_maptiler
GRAPHHOPPER_API_KEY=tu_api_key_de_graphhopper
NOMINATIM_API_URL=https://nominatim.openstreetmap.org

# ==================== REDIS (OPCIONAL, PARA CACHING) ====================
REDIS_URL=redis://:password@hostname:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_password_redis

# ==================== URLS FRONTEND Y BACKEND ====================
FRONTEND_URL=https://schooltrack-frontend.onrender.com
FRONTEND_URL_PROD=https://tu-dominio.com
BACKEND_URL=https://schooltrack-backend.onrender.com
BACKEND_URL_PROD=https://api.tu-dominio.com

# ==================== EMAIL (NOTIFICACIONES) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_FROM=noreply@schooltrack.com
ENABLE_EMAIL_NOTIFICATIONS=true

# ==================== ALMACENAMIENTO EN NUBE (AWS S3 - OPCIONAL) ====================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ==================== MONITOREO Y LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=
ENABLE_PROFILING=false

# ==================== SEGURIDAD ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
ENABLE_CORS=true
ENABLE_HELMET=true

# ==================== PERSISTENCIA DE ARCHIVOS ====================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
