# ==========================================
# SCHOOLTRACK - VARIABLES DE ENTORNO
# ==========================================

# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# BASE DE DATOS
# ==========================================
MONGODB_URI=mongodb://localhost:27017/schooltrack
# Para Docker: mongodb://admin:admin123@mongodb:27017/schooltrack?authSource=admin

# ==========================================
# AUTENTICACIÓN JWT
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ==========================================
# SERVICIOS EXTERNOS
# ==========================================
# Mapas y tiles
MAPTILER_API_KEY=your_maptiler_api_key_here

# Rutas y navegación
GRAPHHOPPER_API_KEY=your_graphhopper_api_key_here

# Geocodificación
NOMINATIM_API_URL=https://nominatim.openstreetmap.org
LOCATIONIQ_API_KEY=your_locationiq_api_key_here

# ==========================================
# REDIS (OPCIONAL)
# ==========================================
REDIS_URL=redis://localhost:6379
# Para Docker: redis://redis:6379

# ==========================================
# CORS Y FRONTEND
# ==========================================
FRONTEND_URL=http://localhost:8080

# ==========================================
# EMAIL (OPCIONAL - PARA NOTIFICACIONES)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ==========================================
# LOGS Y MONITOREO
# ==========================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# ==========================================
# SEGURIDAD
# ==========================================
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_this

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# DESARROLLO
# ==========================================
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:3000